<h1>Review for your rental</h1>

<%= form_with(model: [ @rental, @review ], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rating %>
    <%= form.number_field :rating, class: "form-control" %>
  </div>

  <%= form.submit "Create Review", class: "btn btn-primary mt-4" %>
<% end %>
