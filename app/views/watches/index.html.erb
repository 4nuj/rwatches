<div class="container-fluid">
  <div class="row">
    <div class="col">
      <% @watches.each_with_index do |watch, i| %>
        <% average_rating = watch.average_rating || 0 %>
        <div class="card-body shadow-lg p-3 mt-2">
          <h5 class="card-title"><%= watch.brand %> <%= watch.model %></h5>
          <% if watch.image.attached? %>
            <%= image_tag watch.image, class: "card-image" %>
          <% end %>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <%= link_to 'Rent', new_watch_rental_path(watch), class: "btn btn-sm btn-outline-secondary" %>
            </div>
            <div class="star-rating">
              <% (1..5).each do |i| %>
                <% if i <= average_rating %>
                  <%= image_tag('https://icon-library.com/images/rating-star-icon/rating-star-icon-15.jpg', size: '20') %>
                <% else %>
                  <%= image_tag('https://img.icons8.com/?size=512&id=104&format=png', size: '20') %>
                <% end %>
              <% end %>
            </div>
          </div>
          <small class="text-muted"><%= number_to_currency(watch.price) %></small>
        </div>
      <% end %>
    </div>
    <div class="col mt-2" style="width: 100%; padding-top: 20px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
