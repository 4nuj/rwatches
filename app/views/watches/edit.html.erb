<h1>Edit Watch</h1>
<div class="card justify-content-center">
  <div class="card-container custom-bg">
          <%= form_for @watch do |f| %>
            <% if @watch.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@watch.errors.count, "error") %> prohibited this watch from being saved:</h2>

                <ul>
                <% @watch.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="field">
              <%= f.label :brand %>
              <%= f.text_field :brand %>
            </div>

            <div class="field">
              <%= f.label :model %>
              <%= f.text_field :model %>
            </div>

            <div class="field">
              <%= f.label :description %>
              <%= f.text_area :description %>
            </div>

            <div class="field">
              <%= f.label :price %>
              <%= f.number_field :price %>
            </div>

            <div class="field">
              <%= f.label :address %>
              <%= f.text_area :address %>
            </div>

            <div class="field">
              <%= f.label :image %>
              <%= f.file_field :image %>
            </div>


            <div class="actions">
              <%= f.submit %>
            </div>
          <% end %>

          <%= link_to 'Back', my_watches_path %>
  </div>
</div>

<style>
  .card {
    padding: 30px;
    margin-left: auto;
    margin-right: auto;
  }

  .card-container {
    padding: 20px;
    margin-left: auto;
    margin-right: auto;
  }

  .field {
    padding-bottom: 20px;
  }

  .field label {
    vertical-align: top;
  }

